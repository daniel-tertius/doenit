{
  "name": "doenit-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    ".",
    "functions",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=doenit",
    "build": "npm run build --workspace=doenit",
    "build:all": "npm run build --workspaces",
    "functions:dev": "npm run serve --workspace=functions",
    "functions:deploy": "npm run deploy --workspace=functions",
    "app": "./tools/app_generation.sh"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
