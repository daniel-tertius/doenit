<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <!-- Header with app name and add button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/widget_header_background"
        android:gravity="center_vertical"
        android:padding="4dp">

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginEnd="8dp"
            android:contentDescription="Doenit Logo" />

        <TextView
            android:id="@+id/app_name_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Doenit"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/widget_text_primary" />

        <ImageButton
            android:id="@+id/add_task_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/add_button_background"
            android:src="@drawable/ic_add"
            android:contentDescription="Voeg taak by"
            android:scaleType="centerInside" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/widget_background"
        android:gravity="center_vertical"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:paddingBottom="4dp">

        <!-- Tasks list -->
        <ListView
            android:id="@+id/widget_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/transparent"
            android:dividerHeight="4dp"
            android:scrollbars="none" />

        <!-- Empty state -->
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jou lys is skoon!\nDruk + om een by te voeg"
            android:textSize="14sp"
            android:textColor="@color/widget_text_secondary"
            android:gravity="center"
            android:padding="16dp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>