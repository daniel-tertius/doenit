<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/task_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/task_item_background"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:gravity="center_vertical"
        android:minHeight="56dp">

        <!-- InputCheckbox (for completion) - positioned on left -->
        <ImageView
            android:id="@+id/complete_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_box"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:contentDescription="Complete task" />

        <!-- Task content -->
        <LinearLayout
            android:id="@+id/task_item_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="32dp">

            <!-- Task name with semibold text -->
            <TextView
                android:id="@+id/task_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/widget_text_primary"
                android:maxLines="2"
                android:ellipsize="end"
                android:lineSpacingExtra="2dp" />

            <!-- Pills container for due date and category -->
            <LinearLayout
                android:id="@+id/pills_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <!-- Due date pill with clock icon -->
                <LinearLayout
                    android:id="@+id/due_date_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/pill_background_due_date"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="6dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/clock_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_clock"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Due date" />

                    <TextView
                        android:id="@+id/task_due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:textColor="@color/widget_text_secondary" />

                    <ImageView
                        android:id="@+id/repeat_icon"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@drawable/ic_sync"
                        android:layout_marginStart="4dp"
                        android:visibility="gone"
                        android:contentDescription="Repeating task" />
                </LinearLayout>

                <!-- Category pill with categories icon -->
                <LinearLayout
                    android:id="@+id/category_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/pill_background_category"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/categories_icon"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_categories"
                        android:layout_marginEnd="4dp"
                        android:contentDescription="Category" />

                    <TextView
                        android:id="@+id/task_category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11sp"
                        android:maxWidth="120dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/widget_text_secondary" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Important icon - positioned at top right corner -->
    <ImageView
        android:id="@+id/important_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_important"
        android:layout_gravity="top|end"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:visibility="gone"
        android:contentDescription="Important task" />
</FrameLayout>